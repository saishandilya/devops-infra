pipeline {

    agent { node { label 'slave' } }

    tools { terraform 'terraform' }

    environment {
        WORKDIR = <your pipeline name>
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Fetching Infra code from GitHub'
                git branch: 'main', url: 'https://github.com/<your user name>/devops-infra.git'
            }
        }
    }
}